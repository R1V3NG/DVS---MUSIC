<Window x:Class="DVS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DVS"
        mc:Ignorable="d"
        Title="LoginWindow" Height="170" Width="249">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="11,6,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="11,44,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tLogin" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="tPassword" HorizontalAlignment="Center" Margin="0,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Name="Err" Content="Неверный логин или пароль!" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top" Width="119" FontSize="8" Visibility="Hidden"/>
        <Button Content="Создать аккаунт" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

    </Grid>
</Window>
